#include <avr/io.h>
#include <stdbool.h>

 int main ()
{
  //deze regels code moeten in de robot main staan
  DDRB &= ~(1<<PINB0); // instellen als input
  PORTB |= (1<<PINB0); // inschakelen van pull_up resistor
  
  while (bumperklik())
  {
    if(bumperklik())
    {
      //functie om te stoppen
    
    }
  }
  return 1;   
}

int bumperklik()
{
  //dit moet als functie buiten de robot main
while (1)
{
  if (  !(PORTB = ~(1 << PINB0)) || !(PORTC = ~(1 << PINC6)) )
  {
    _delay_ms(5);
    if ( !(PORTB = ~(1 << PINB0)) ||!(PORTC = ~(1 << PINC6)) )
    {
    return 1;
    }
  }
}
}
